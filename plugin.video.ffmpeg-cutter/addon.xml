<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.ffmpeg-cutter" name="ffmpeg cutter"
	version="1.0.0" provider-name="Heckie">
	<requires>
		<import addon="xbmc.python" version="2.7.0" />
	</requires>
	<extension point="kodi.context.item">
		<menu id="kodi.core.main">
			<menu>
				<label>ffmpeg cutter ...</label>
				<item library="cut.py">
					<label>cut file</label>
					<visible>true</visible>
				</item>
				<item library="split.py">
					<label>split file</label>
					<visible>true</visible>
				</item>					
			</menu>                
		</menu>	
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_gb">Heckie's ffmpeg cutter</summary>
		<description lang="en_gb"></description>
		<disclaimer lang="en_gb"></disclaimer>
		<language></language>
		<platform>all</platform>
		<license></license>
		<forum></forum>
		<website>https://github.com/Heckie75/kodi-addon-ffmpeg-cutter</website>
		<email>github@heckie.de</email>
		<source></source>
		<news></news>
		<assets>
			<screenshot>resources/screenshots/screenshot_1.png</screenshot>
			<screenshot>resources/screenshots/screenshot_2.png</screenshot>
			<screenshot>resources/screenshots/screenshot_3.png</screenshot>
			<screenshot>resources/screenshots/screenshot_4.png</screenshot>
		</assets>
	</extension>
</addon>
